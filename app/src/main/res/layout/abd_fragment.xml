<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.withpet.ui.walk.WalkMainFragment"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/find"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#ddf"
                android:gravity="center"
                android:text="유기견 찾기"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/pet"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#88dddddd"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="@dimen/card_content_padding"
                android:paddingBottom="@dimen/card_content_padding"
                android:text="유기견"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/shelter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/find" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shelter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#88dddddd"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="@dimen/card_content_padding"
                android:paddingBottom="@dimen/card_content_padding"
                android:text="보호소"
                app:layout_constraintBottom_toBottomOf="@+id/pet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pet"
                app:layout_constraintTop_toTopOf="@+id/pet" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#fdf"
                android:gravity="center"
                android:text="유기견 정보"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/info_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/info_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="유기견 찾기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/info_btn_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/info_btn_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="보호소 찾기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/info_btn"
                app:layout_constraintTop_toBottomOf="@+id/info" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <data>

        <variable
            name="viewModel"
            type="com.example.withpet.ui.abandon.AbdViewModel" />
    </data>
</layout>