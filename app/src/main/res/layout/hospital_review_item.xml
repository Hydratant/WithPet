<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <ImageView
                android:layout_gravity="center"
                android:id="@+id/hospital_review_item_imageView"
                android:layout_margin="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_userimage"
        />

        <TextView
                android:id="@+id/hospital_review_item_userId"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                tools:text="chl8263@naver.com"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
    >


        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_review_item_star_img_1"
                android:layout_height="16dp"
                android:layout_width="16dp"
                app:srcCompat="@drawable/ic_empty_star"
                android:layout_gravity="center"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_review_item_star_img_2"
                android:layout_height="16dp"
                android:layout_width="16dp"
                app:srcCompat="@drawable/ic_empty_star"
                android:layout_gravity="center"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_review_item_star_img_3"
                android:layout_height="16dp"
                android:layout_width="16dp"
                app:srcCompat="@drawable/ic_empty_star"
                android:layout_gravity="center"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_review_item_star_img_4"
                android:layout_height="16dp"
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_empty_star"
                android:layout_gravity="center"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_review_item_star_img_5"
                android:layout_height="14dp"
                android:layout_width="16dp"
                app:srcCompat="@drawable/ic_empty_star"
                android:layout_gravity="center"
        />

        <TextView
                android:id="@+id/hos_review_item_dayAgo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                tools:text="1달 전"
        />

    </LinearLayout>

    <TextView
            android:id="@+id/hospital_review_item_comment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            tools:text="좋습니다."
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
    />



</LinearLayout>