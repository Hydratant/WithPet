<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/hos_detail_star_layout"
        android:layout_below="@+id/hos_detail_Title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
>
    <TextView
            android:id="@+id/hos_detail_tab1_star_avg"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="16sp"
            tools:text="4.0"
            android:layout_marginRight="8dp"
    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hos_detail_tab1_star_img_1"
            android:layout_height="16dp"
            android:layout_width="16dp"
            app:srcCompat="@drawable/ic_empty_star"
            android:layout_gravity="center"
    />
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hos_detail_tab1_star_img_2"
            android:layout_height="16dp"
            android:layout_width="16dp"
            app:srcCompat="@drawable/ic_empty_star"
            android:layout_gravity="center"
    />
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hos_detail_tab1_star_img_3"
            android:layout_height="16dp"
            android:layout_width="16dp"
            app:srcCompat="@drawable/ic_empty_star"
            android:layout_gravity="center"
    />
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hos_detail_tab1_star_img_4"
            android:layout_height="16dp"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_empty_star"
            android:layout_gravity="center"
    />
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hos_detail_tab1_star_img_5"
            android:layout_height="16dp"
            android:layout_width="16dp"
            app:srcCompat="@drawable/ic_empty_star"
            android:layout_gravity="center"
    />

    <TextView
            android:id="@+id/hos_card_star_count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            tools:text="(100ê°œ)"
    />

</LinearLayout>