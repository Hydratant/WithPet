<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/hos_cardView_item_layout"
>
    <androidx.cardview.widget.CardView
        android:id="@+id/hos_cardView"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
            <LinearLayout
                android:id="@+id/cardview_hos_card_image_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
            >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:scaleType="fitXY"
                    android:src="@drawable/hos_sample_1"
                    app:riv_corner_radius_top_left="15dp"
                />
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:scaleType="fitXY"
                    android:src="@drawable/hos_sample_2"
                    app:riv_corner_radius_top_right="15dp"
                />
            </LinearLayout>
            <TextView
                android:id="@+id/cardview_hos_card_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_hos_card_image_layout"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                tools:text="해피 동물병원"
            />
            <LinearLayout
                android:id="@+id/cardview_hos_card_star_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_hos_card_Title"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
            >


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cardview_hos_card_star_img_1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignStart="@+id/cardview_hos_card_star_layout"
                    android:layout_alignTop="@+id/cardview_hos_card_star_layout"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_empty_star"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cardview_hos_card_star_img_2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_empty_star"
                />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cardview_hos_card_star_img_3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_empty_star"
                />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cardview_hos_card_star_img_4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_empty_star"
                />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cardview_hos_card_star_img_5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_empty_star"
                />

            </LinearLayout>

            <TextView
                android:id="@+id/cardview_hos_card_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_hos_card_star_layout"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:textColor="@color/colorGray"
                android:textSize="12sp"
                tools:text="서울특별시 강남구 신사동 528-3번지 덕산빌딩 203호"
            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>