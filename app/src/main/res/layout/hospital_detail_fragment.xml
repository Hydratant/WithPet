<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/hos_detail_image_layout"
            android:layout_alignParentTop="true"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
    >
        <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hos_sample_1"
                android:layout_weight="2"
                android:layout_marginRight="5dp"
        />
        <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/hos_sample_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
        />
    </LinearLayout>

    <TextView
            android:id="@+id/hos_detail_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="해피 동물병원"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/hos_detail_image_layout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="left"
            android:gravity="left"
    />

    <LinearLayout
            android:id="@+id/hos_detail_star_layout"
            android:layout_below="@+id/hos_detail_Title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
    >
        <TextView
                android:id="@+id/hos_card_star_avg"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16sp"
                tools:text="4.0"
                android:layout_marginRight="8dp"
        />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_card_star_img_1"
                android:layout_height="16dp"
                android:layout_width="16dp"
                app:srcCompat="@drawable/ic_star"
                android:layout_gravity="center"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_card_star_img_2"
                android:layout_height="16dp"
                android:layout_width="16dp"
                app:srcCompat="@drawable/ic_star"
                android:layout_gravity="center"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_card_star_img_3"
                android:layout_height="16dp"
                android:layout_width="16dp"
                app:srcCompat="@drawable/ic_star"
                android:layout_gravity="center"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_card_star_img_4"
                android:layout_height="16dp"
                android:layout_width="16dp"
                app:srcCompat="@drawable/ic_star"
                android:layout_gravity="center"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hos_card_star_img_5"
                android:layout_height="16dp"
                android:layout_width="16dp"
                app:srcCompat="@drawable/ic_star"
                android:layout_gravity="center"
        />

        <TextView
                android:id="@+id/hos_card_star_count"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                tools:text="(100개)"
        />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/hospital_item_layout"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:gravity="center"
            android:layout_below="@+id/hos_detail_star_layout"
    />

    <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hospital_item_layout"
    >

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개요"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰"/>


    </com.google.android.material.tabs.TabLayout>


</RelativeLayout>